<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Napoleon's Theorem Visualization</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
        }
        canvas {
            border: 1px solid black;
            margin-top: 20px;
        }
        button {
            margin-top: 10px;
            padding: 10px;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <h2>Napoleon's Theorem Visualization</h2>
    <button onclick="toggleDirection()">Toggle Inward/Outward</button>
    <canvas id="canvas" width="600" height="600"></canvas>

    <script>
        const canvas = document.getElementById("canvas");
        const ctx = canvas.getContext("2d");
        let inward = false;

        let points = [
            { x: 200, y: 100, dragging: false },
            { x: 100, y: 400, dragging: false },
            { x: 400, y: 300, dragging: false }
        ];

        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Draw main triangle
            ctx.strokeStyle = "black";
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(points[0].x, points[0].y);
            ctx.lineTo(points[1].x, points[1].y);
            ctx.lineTo(points[2].x, points[2].y);
            ctx.closePath();
            ctx.stroke();

            // Compute and draw equilateral triangles
            let centers = [];
            for (let i = 0; i < 3; i++) {
                let a = points[i];
                let b = points[(i + 1) % 3];
                let eq = equilateralPoint(a, b, inward);
                centers.push(centerOfTriangle(a, b, eq));

                ctx.strokeStyle = "blue";
                ctx.beginPath();
                ctx.moveTo(a.x, a.y);
                ctx.lineTo(b.x, b.y);
                ctx.lineTo(eq.x, eq.y);
                ctx.closePath();
                ctx.stroke();
            }

            // Draw Napoleon's triangle
            ctx.strokeStyle = "red";
            ctx.setLineDash([5, 5]);
            ctx.beginPath();
            ctx.moveTo(centers[0].x, centers[0].y);
            ctx.lineTo(centers[1].x, centers[1].y);
            ctx.lineTo(centers[2].x, centers[2].y);
            ctx.closePath();
            ctx.stroke();
            ctx.setLineDash([]);

            // Draw draggable points
            ctx.fillStyle = "black";
            for (let p of points) {
                ctx.beginPath();
                ctx.arc(p.x, p.y, 5, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        function equilateralPoint(p1, p2, inward) {
            let dx = p2.x - p1.x;
            let dy = p2.y - p1.y;
            let length = Math.sqrt(dx * dx + dy * dy);
            let angle = Math.atan2(dy, dx) + (inward ? -Math.PI / 3 : Math.PI / 3);
            return {
                x: p1.x + length * Math.cos(angle),
                y: p1.y + length * Math.sin(angle)
            };
        }

        function centerOfTriangle(p1, p2, p3) {
            return {
                x: (p1.x + p2.x + p3.x) / 3,
                y: (p1.y + p2.y + p3.y) / 3
            };
        }

        function toggleDirection() {
            inward = !inward;
            draw();
        }

        function onMouseDown(event) {
            const { offsetX, offsetY } = event;
            for (let p of points) {
                if (Math.hypot(p.x - offsetX, p.y - offsetY) < 10) {
                    p.dragging = true;
                    break;
                }
            }
        }

        function onMouseMove(event) {
            const { offsetX, offsetY } = event;
            for (let p of points) {
                if (p.dragging) {
                    p.x = offsetX;
                    p.y = offsetY;
                    draw();
                }
            }
        }

        function onMouseUp() {
            for (let p of points) p.dragging = false;
        }

        canvas.addEventListener("mousedown", onMouseDown);
        canvas.addEventListener("mousemove", onMouseMove);
        canvas.addEventListener("mouseup", onMouseUp);
        canvas.addEventListener("mouseleave", onMouseUp);

        draw();
    </script>
</body>
</html>

